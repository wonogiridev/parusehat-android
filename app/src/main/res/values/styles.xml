    <style name="customFontBottomNav" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
